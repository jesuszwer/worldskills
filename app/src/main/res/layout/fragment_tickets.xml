<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32sp"
    android:layout_marginVertical="24sp"
    tools:context=".TicketsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="16sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frame_title_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:text="Tickets List"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64sp"
            android:layout_marginBottom="24sp"
            android:text="Create a new tickets"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/open_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opening Ceremony"
                android:textAlignment="center"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/open_list"
                android:layout_width="match_parent"
                android:layout_height="200sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/close_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closing Ceremony"
                android:textAlignment="center"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/close_list"
                android:layout_width="match_parent"
                android:layout_height="200sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>